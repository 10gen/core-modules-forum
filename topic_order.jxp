<%
var topics = (request.order).split(":");
var i;
for(i=0; i<topics.length; i++) {
         t = db.forum.topics.findOne( { name : topics[i] } );

         // like, for deleted and moderated...
         if(t == null) 
              continue;

         t.setOrder(i+1);
         db.forum.topics.save(t);
}

%>