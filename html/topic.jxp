<%
    var f = arguments[0];
var link = "viewtopic?name="+URI.escape_queryargs(f.name);
if(f._id == app.Forum.Controller.specialDeletedID || 
   f._id == app.Forum.Controller.specialModeratedID)
    link = "viewtopic?id="+f._id;
%>
<tr>
  <td class="alignleft">
    <a href="<%= link %>"><%= f.name%></a>
    <nobr><%= f.description %></nobr>
  </td>
  <td>
    <%= f.threadCount.toFixed(0) %>
  </td>
  <td>
    <%= f.postCount.toFixed(0) %>
  </td>
</tr>

</div>
