<%
core.forum.data.thread();
    var t = arguments[0];
var f = t.findFirstPost();
if(f == null) f = {title: "(unknown)", author: "(unknown)" };
var l = t.getDescendant(t.latestPost);
%>
<tr>
  <td>
    <a href="viewthread?id=<%= t._id%>"><%= f.title%></a> started by <%= f.author %> <br/>
at <%= f.ts %>
  </td>
  <td>
    <%= t.count.toFixed() %>
  </td>
  <td>
    by <%= l.author %> (<a href="viewthread?id=<%= t._id %>#<%= l._id %>">go</a>)<br/>
      at <%= l.ts %>
  </td>

</div>
