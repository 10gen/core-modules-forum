<% htmlheader('10gen Public Forum | Topic: Deleted'); %>
<h1>Deleted</h1>
<%
    var posts = Forum.data.Thread.getAllPostsDeletedByUser_Query(user);
// All threads with a deleted post in it
var threads = {};
posts.forEach(function(p){threads[p._id] = true; });
for(var threadId in threads){
    var thread = Forum.data.Thread.find({_id: threadID});
    Forum.renderer.thread(thread, {deleted: true});
}
%>
<% htmlfooter(); %>
